@model Livros

<div class="row">
    <form class="col-md-4" asp-action="Create">
        <div class="form-group">
            <label asp-for="Nome" class="control-label"></label>
            <input asp-for="Nome" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Sinopse" class="control-label"></label>
            <input asp-for="Sinopse" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Autor" class="control-label"></label>
            <input asp-for="Autor" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Edicao" class="control-label"></label>
            <input asp-for="Edicao" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Lancamento" class="control-label"></label>
            <input asp-for="Lancamento" class="form-control" />
        </div>
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Adicionar!" />
            <a class="btn btn-info" asp-controller="Livros" asp-action="Index">Voltar!</a>
        </div>
    </form>
    
</div>

