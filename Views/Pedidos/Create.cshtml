@model Pedidos

<div class="row">
    <form class="col-md-4" asp-action="Create">
        <div class="form-group">
            <label asp-for="livroId" class="control-label"></label>
            <select asp-for="livroId" class="form-control" asp-items="ViewBag.listaDeLivros">
                <option value="">--Selecione o livro do pedido--</option>
            </select>
            <span class="text-danger" asp-validation-for="livroId"></span>
        </div>
        <div class="form-group">
            <label asp-for="endereco" class="control-label"></label>
            <input asp-for="endereco" class="form-control" />
            <span class="text-danger" asp-validation-for="endereco"></span>
        </div>
        <div class="form-group">
            <label  asp-for="quantidade" class="control-label"></label>
            <input type="number" min="1" oninput="this.value = Math.abs(this.value)" asp-for="quantidade" class="form-control" />
            <span class="text-danger" asp-validation-for="quantidade"></span>
        </div>
        
        
        <div class="form-group">
            <input class="btn btn-success" type="submit" value="Fazer pedido!" />
            <a class="btn btn-info" asp-controller="Livros" asp-action="Index">Voltar!</a>
        </div>
    </form>
    
</div>

